<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zjol.com.cn.topic" >

    <application
        >
        <activity
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:name=".activity.TopicHomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.DAILY" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!--scheme http协议-->
                <data android:scheme="@string/data_scheme" />
                <data android:scheme="@string/data_scheme_https" />

                <!-- 话题 path -->
                <data android:path="/native/topic_label.html" />
                <data android:path="/topic/home/activity" />
                <data android:host="@string/data_host" />


                <!-- 以下测试 host -->
                <!-- 以下测试 host -->
                <data android:host="@string/data_host_dev" />
                <data android:host="@string/data_host_test" />
                <data android:host="@string/data_host_pre" />
                <data android:host="@string/data_host_real" />
                <data android:host="@string/data_host_zjol" />
                <data android:host="@string/data_host_zj" />
            </intent-filter>
        </activity>

        <activity

            android:screenOrientation="portrait"
            android:name=".activity.NormalTopicHomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.DAILY" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/data_host"
                    android:path="/topic/home/normal/activity"
                    android:scheme="@string/data_scheme" />
            </intent-filter>
        </activity>


        <activity
            android:screenOrientation="portrait"
            android:name=".activity.TopicChooserActivity">
            <intent-filter>
                <action android:name="android.intent.action.DAILY" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/data_host"
                    android:path="/topic/choose/activity"
                    android:scheme="@string/data_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:windowSoftInputMode="stateAlwaysVisible|adjustPan"
            android:screenOrientation="portrait"
            android:name=".activity.TopicSearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.DAILY" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/data_host"
                    android:path="/topic/search/activity"
                    android:scheme="@string/data_scheme" />
            </intent-filter>
        </activity>
    </application>
</manifest>
