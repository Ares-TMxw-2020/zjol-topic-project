<?xml version="1.0" encoding="utf-8"?>
<com.aliya.view.ratio.RatioRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/module_topic_bg_home_video"
    android:layout_marginBottom="8dp"
    android:id="@+id/ratio_container">

    <com.aliya.view.ratio.RatioRelativeLayout
        android:id="@+id/rl_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ratio_w2h="120:159"
        >
        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <FrameLayout
            android:id="@+id/fl_tag"
            android:layout_marginLeft="5dp"
            android:layout_width="27dp"
            android:layout_height="19dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@mipmap/zjov_ugc_topic_label_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_tag"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/ts_10sp"
                android:layout_gravity="center"
                tools:text="NO1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>



    </com.aliya.view.ratio.RatioRelativeLayout>

</com.aliya.view.ratio.RatioRelativeLayout>