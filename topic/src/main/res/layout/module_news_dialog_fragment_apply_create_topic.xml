<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/_222222"
            android:textSize="@dimen/ts_18sp"
            android:fontFamily="@font/fzzcysk_zbjt"
            android:text="申请创建话题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@color/_f5f5f5_7a7b7d"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:gravity="start"
            android:hint="输入话题名称"
            android:textSize="@dimen/ts_16sp"
            android:fontFamily="@font/fzbiaoysk_zbjt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="86dp"/>
        <TextView
            android:fontFamily="@font/fzbiaoysk_zbjt"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/ts_12sp"
            android:textColor="@color/_acacac"
            android:gravity="center"
            android:text="规则：名称不超过15个汉字，限汉字、字母、数字、下划线、空格"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="27dp"
            android:background="@color/_dcdcdc"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/_acacac"
            android:textSize="@dimen/ts_16sp"
            android:fontFamily="@font/fzzcysk_zbjt"
            android:text="申请"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>