<?xml version="1.0" encoding="utf-8"?>
<zjol.com.cn.news.common.widget.AutoFitEmptyView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_shot"
        android:text="我也要拍"
        android:textSize="16sp"
        android:textColor="@color/_ffffff"
        android:gravity="center"
        android:background="@drawable/module_news_bg_gradient_blue_round"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="236dp"
        android:layout_height="35dp"/>

    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@mipmap/zjov_mine_works_blank_image"
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:fontFamily="@font/fzbiaoysk_zbjt"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_icon"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:textColor="@color/_484848_7a7b7d"
            android:textSize="@dimen/ts_14sp"
            android:text="还没视频,赶紧上传吧~" />

    </RelativeLayout>


</zjol.com.cn.news.common.widget.AutoFitEmptyView>