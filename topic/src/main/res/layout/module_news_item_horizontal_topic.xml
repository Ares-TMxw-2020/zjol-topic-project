<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingTop="6dp">

    <RelativeLayout
        android:layout_marginLeft="4dp"
        android:layout_marginRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:drawablePadding="4dp"
            android:layout_marginRight="70dp"
            android:fontFamily="@font/fzzcysk_zbjt"
            android:id="@+id/tv_topic"
            tools:text="话题话题话话题话题话题话话题话题话题话题话话题话题话题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/_222222"
            android:textSize="@dimen/ts_16sp" />

        <LinearLayout
            android:id="@+id/ll_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/fzbiaoysk_zbjt"
                android:id="@+id/tv_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="更多"
                android:textColor="@color/_222222"
                android:textSize="@dimen/ts_14sp" />
            <ImageView
                android:layout_marginLeft="3dp"
                android:src="@mipmap/module_detail_right_arrow"
                android:layout_gravity="center_vertical"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
        </LinearLayout>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

</LinearLayout>