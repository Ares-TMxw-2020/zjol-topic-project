<?xml version="1.0" encoding="utf-8"?><!--栏目左拉查看更多-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1px"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/module_news_ic_left_pull" />

        <TextView
            android:fontFamily="@font/fzbiaoysk_zbjt"
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.5dp"
            android:gravity="center_horizontal"
            android:text="继续滑动\n查看详情"
            android:textColor="@color/_000000_7a7b7d"
            android:textSize="@dimen/ts_12sp" />
    </LinearLayout>
</FrameLayout>